@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 class="border-left  border-warning">Kategori Güncelleme</h2>
<br />


@using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
{

    <div class="form-group">

        @Html.Label("Kategori Id")
        @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control", @readonly = true })
        <br />
        @Html.Label("Kategori Ad")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori Aciklama")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
    <br />
        <button class="btn btn-warning">Kaydet</button>
    </div>




}

















