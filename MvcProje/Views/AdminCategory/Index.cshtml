@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategoriler</h2>



<br />

<table class="table table-bordered">
    <tr>    
        <th>ID</th>
        <th>Ad</th>
        <th>Aciklama</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>

    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.CategoryID</td>
    <td>@item.CategoryName</td>
    <td>@item.CategoryDescription</td>
    <td>@item.CategoryStatus</td>
    <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" type="button" class="btn btn-danger">Sil</a></td>
    <td><a href="/AdminCategory/UpdateCategory/@item.CategoryID" type="button" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Heading/Index/" type="button" class="btn btn-primary">Başlıklar</a></td>
</tr>
    }
</table>
<a href="/AdminCategory/AddCategory" type="button" class="btn btn-success">Yeni Kategori</a>
