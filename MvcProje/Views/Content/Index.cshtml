@using EntityLayer.Concrete
@model List<Content>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ int i = 0; }
<br />  
<h2>Yazılar</h2>


<br />

<table class="table table-bordered">
    <tr>
        <th>Numara</th>
        <th>İçerik Yazısı</th>
        <th>Tarih</th>
        <th>Yazar</th>
        <th>Başlık</th>
       

    </tr>

    @foreach (var item in Model)
    {
        i = i + 1;
        <tr>
            <td>@i</td>
            <td>@item.ContentValue</td>
            <td>@(((DateTime)item.ContentDate).ToString("dd-MM-yyyy"))</td>
            <td>@item.Writer.WriterName @item.Writer.WriterLastName</td>
            <td>@item.Heading.HeadingName</td>
            
        </tr>
    }
</table>

<br />
