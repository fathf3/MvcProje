    <!-- Contact-->
    <section class="page-section" id="contact">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-lg-8 col-xl-6 text-center">
                    <h2 class="mt-0">Bizimle Tanışmak İstermisin !</h2>
                    <hr class="divider" />
                    <p class="text-muted mb-5">Bir sonraki projenize bizimle başlamaya hazır mısınız? Bize bir mesaj gönderin, en kısa sürede size geri döneceğiz!</p>
                </div>
            </div>
            <div class="row gx-4 gx-lg-5 justify-content-center mb-5">
                <div class="col-lg-6">
                    
                    @using (Html.BeginForm("NewMessage", "Contact", FormMethod.Post))
                    {
                    <div class="form-group">
                        @Html.Label("Ad ")
                        @Html.TextAreaFor(x => x.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.UserName)
                        <br />
                        @Html.Label("Konu")
                        @Html.TextAreaFor(x => x.Subject, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Subject)
                        <br />
                        @Html.Label("Mail")
                        @Html.TextAreaFor(x => x.UserMail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.UserMail)
                        <br />
                        @Html.Label("Mesaj")
                        @Html.TextAreaFor(x => x.Message, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Message)
                        <br />
                        <button class="btn btn-success">Kaydet</button>
                    </div>
                    }
                </div>
            </div>

        </div>
    </section>
    <!-- Footer-->
    <footer class="bg-light py-5">
        <div class="container px-4 px-lg-5"><div class="small text-center text-muted">Copyright &copy; 2021 - Fatih Mutlu</div></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SimpleLightbox plugin JS-->
